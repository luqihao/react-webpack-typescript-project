{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "sourceMap": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true, // 忽略所有的声明文件（ *.d.ts）的类型检查
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "paths": {
            "@assets/*": ["assets/*"],
            "@contants/*": [
                "contants/*"
            ],
            "@store/*": [
                "store/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@workers/*": [
                "workers/*"
            ],
        }
    }
}